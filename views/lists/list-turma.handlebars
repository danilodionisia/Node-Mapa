<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h4>Lista Turmas</h4>
            
            {{#each turmas}}
                <div class="card mt-2">
                    <div class="card-body row">
                        <div class="col">
                            <p>
                                <strong>Turma: </strong> {{turma}} <br>
                                <strong>Oferta: </strong> {{oferta}} <br>
                                <strong>Técnica: </strong> {{tecnico.tecnico}}
                            </p>
                        </div>
                        <div class="col text-right my-auto">
                            <form action="/rem-turma-db" method="POST">
                                <input type="hidden" name="id" value="{{_id}}">
                                <button class="btn btn-danger" type="submit">Remover</button>
                            </form>
                        </div>                        
                    </div>
                </div>
            {{else}}    
                <div class="card mt-2">
                    <div class="card-body">
                        <h5>Não há turmas para serem exibidas!</h5>
                    </div>
                </div>
            {{/each}}

        </div>    
    </div>
</div>