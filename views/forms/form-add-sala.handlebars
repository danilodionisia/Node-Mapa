{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h4>Adiciona nova sala</h4>
            <form action="/add-sala-db" method="POST">
                <div class="form-row mt-5">
                    <div class="form-group col-md-4">
                        <label for="sala">Sala:</label>
                        <input type="text" name="sala" class="form-control" placeholder="Insira a sala">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="capacidade">Capacidade:</label>
                        <input type="number" name="capacidade" class="form-control" placeholder="Insira a capacidade">
                    </div> 
                     <div class="form-group col-md-4">
                        <label for="tecnico">Técnica(o):</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Opções</label>
                            </div>
                            <select name="tecnico" class="custom-select" id="inputGroupSelect01">
                                <option value="0" selected>Escolher...</option>
                                {{#each tecnico}}
                                    <option value="{{_id}}">{{tecnico}}</option>
                                {{/each}}
                            </select>
                        </div>                 
                    </div>
                </div>
                <div class="form-group mt-3 align-right">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>                
            </form>
        </div>    
    </div>
</div>