<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h4>Adiciona nova turma</h4>
            <form action="/add-turma-db" method="POST">
                <div class="form-row mt-5">
                    <div class="form-group col-md-4">
                        <label for="turma">Turma:</label>
                        <input type="text" name="turma" class="form-control" placeholder="Insira a turma">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="oferta">Oferta:</label>
                        <input type="text" name="oferta" class="form-control" placeholder="Insira a oferta">
                    </div> 
                    <div class="form-group col-md-4">
                        <label for="tecnico">Técnica(o):</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Opções</label>
                            </div>
                            <select name="tecnico" class="custom-select" id="inputGroupSelect01">
                                <option value="0" selected>Escolher...</option>
                                {{#each tecnico}}
                                    <option value="{{_id}}">{{tecnico}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>                    
                </div>    
                <div class="form-group mt-3 align-right">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>                
            </form>
        </div>    
    </div>
</div>